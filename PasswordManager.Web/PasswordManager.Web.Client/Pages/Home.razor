@page "/"
@rendermode InteractiveWebAssembly
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager

<PageTitle>PasswordManager</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>Welcome to PasswordManager, @context.User.Identity?.Name!</h1>
    </Authorized>
    <NotAuthorized>
        <div class="text-center">
            <h1>Welcome to PasswordManager</h1>
            <p>Please log in to access your passwords.</p>
            <button class="btn btn-primary" @onclick="NavigateToLogin">Login</button>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("login");
    }
}